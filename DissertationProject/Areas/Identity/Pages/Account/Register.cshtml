@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="container">
    <div class="row mt-5">
        <div class="col d-flex align-items-center justify-content-center">
            <img src="~/images/money-2.png" alt="logo" height="100" class="d-inline">
            <p class="heading-text fs-1 pt-5 d-inline ">Money Tree</p>
        </div>
    </div>


    <div class="row d-flex justify-content-center my-5">
        <h1 class="heading-text mb-3 mt-3">@ViewData["Title"]</h1>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="subheading-text">Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating my-3">
                <input asp-for="Input.Fname" class="form-control mb-3" autocomplete="firstname" aria-required="true" />
                <label asp-for="Input.Fname"></label>
                <span asp-validation-for="Input.Fname" class="text-danger"></span>
            </div>
            <div class="form-floating my-3">
                <input asp-for="Input.Sname" class="form-control mb-3" autocomplete="surname" aria-required="true" />
                <label asp-for="Input.Sname"></label>
                <span asp-validation-for="Input.Sname" class="text-danger"></span>
            </div>
            <div class="form-floating">
                @*@Html.HiddenFor(model => model.Input.JobName)*@
                <input asp-for="Input.JobName" type="hidden" value="Default" />
            </div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control mb-3" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control mb-3" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control mb-3" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-col mb-3 text-white mb-5">Register</button>
            <!--
            <div class="row mb-5">
                <div class="col">
                    <div class="btn-group w-100 mb-5" role="group">
                        <a asp-area="" asp-controller="Family" asp-action="CreateFamily" class="btn btn-secondary white-text">Register a New Family Acount</a>
                        <a asp-page="./ResendEmailConfirmation" class="btn btn-secondary white-text">Link to an Existing Family Acount</a>
                    </div>
                </div>
            </div>
                -->
        </form>

    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}