@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container">
    <div class="row mt-5">
        <div class="col d-flex align-items-center justify-content-center">
            <img src="~/images/money-2.png" alt="logo" height="100" class="d-inline">
            <p class="heading-text fs-1 pt-5 d-inline ">Money Tree</p>
        </div>
    </div>

    <div class="row d-flex justify-content-center mt-5">
        <section class="px-5">
            <h1 class="heading-text mb-3 mt-3">@ViewData["Title"]</h1>

            <form id="account" method="post">
                <h2 class="subheading-text">Use a local account to log in.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control mb-3" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control mb-3" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mb-4 btn-col">Log in</button>
                </div>
                <div class="row mb-5">
                    <div class="col">
                        <div class="btn-group w-100" role="group">
                            <a id="forgot-password" asp-page="./ForgotPassword" class="btn btn-secondary white-text">Forgot your password?</a>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="btn btn-secondary white-text">Resend email confirmation</a>
                        </div>
                    </div>
                </div>
                <div class="row mb-5">
                    <div class="col">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-col white-text w-100">Register</a>
                    </div>
                </div>

            </form>
        </section>
    </div>

</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
