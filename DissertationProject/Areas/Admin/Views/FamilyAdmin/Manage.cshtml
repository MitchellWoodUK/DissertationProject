@using DissertationProject.Areas.Admin.Models;
@model IEnumerable<FamilyAdminViewModel>
@{
    ViewData["Title"] = "Admin Family Manage";
}

<div class="container">
    <div class="row mt-5">
        @if (TempData["Success"] != null)
        {
            <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
        }
        @if (TempData["Danger"] != null)
        {
            <p class="alert alert-danger" id="successMessage">@TempData["Danger"]</p>
        }
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col">Family Name</th>
                    <th scope="col">Amount of Users</th>
                    <th scope="col">Users</th>
                    <th scope="col">Manage</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var family in Model)
                {
                    <tr>
                        <th scope="row"></th>
                        <td>@family.Family.Name</td>
                        <td>@family.FamilyMembers.Count</td>
                        <td>
                            <!--Print the individual users names-->
                            @foreach (var user in family.FamilyMembers)
                            {
                                //@user.FamilyMember.Fname @user.FamilyMember.Sname <br />
                            }
                        </td>
                        <td>
                            @if (family.FamilyMembers.Count == 0)
                            {
                                <form method="post" class="my-3" action="@Url.Action("RemoveFamily", "FamilyAdmin", new { id = family.Family.Id })" onsubmit="return confirm('Are you sure you want to remove this family?');">
                                    <button type="submit" class="btn btn-danger w-100" id="removeFamily">Remove</button>
                                </form>
                            }

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<script>
    setTimeout(function () {
        var successMessage = document.getElementById('successMessage');
        if (successMessage != null) {
            successMessage.remove();
        }
    }, 5000);</script>