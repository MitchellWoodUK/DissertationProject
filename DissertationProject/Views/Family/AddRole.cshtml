@model CustomUserModel
@{
    ViewData["Title"] = "Add Role";

}

<div class="container">
    <div class="row">
        <h1 class="subheading-text my-5">Assign @Model.Fname a Role:</h1>

        <form method="post" class="my-3">
            <input type="hidden" name="Member.Id" value="@Model.Id" />
            <div class="form-check">
                <input class="form-check-input" type="radio" name="Role" id="family_member" value="Family_Member">
                <label class="form-check-label" for="family_member">
                    Family Member Account
                </label>
            </div>
            <div class="form-check mt-2">
                <input class="form-check-input" type="radio" name="Role" id="family_kid" value="Family_Kid">
                <label class="form-check-label" for="family_kid">
                    Child Family Account
                </label>
            </div>
            <button type="submit" asp-controller="Family" asp-action="AddRole" class="btn btn-success mt-4" id="submitRole">Submit Role</button>
        </form>
    </div>
</div>